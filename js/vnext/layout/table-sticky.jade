-
  var tableStyle = {
    'border-collapse': 'collapse',
    'margin': 0,
    'table-layout': 'fixed',
  };

.table-container
  table.sticky-header(style=tableStyle, class=classes, role='grid')
    colgroup.column-group
    thead.header
  .sticky-header-filler
  table.data-table(style=tableStyle, class=classes, role='grid')
    colgroup.column-group
    tbody
      tr.top-filler(role='presentation')
      tr.bottom-filler(role='presentation')
    tfoot.footer

